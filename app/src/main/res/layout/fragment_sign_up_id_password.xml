<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
<variable
    name="fragment"
    type="com.example.tita.ui.fragment.signup.SignUpIdPasswordFragment" />
    </data>

    <RelativeLayout
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/icon_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logoImage"
                android:scaleType="centerCrop"
                android:padding="2.5sp"
                android:background="@drawable/logostroke"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:layout_width="80sp"
                android:layout_height="80sp" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/ti_ta_text"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/logoImage"
                android:textColor="@color/black"
                android:text="Ti-Ta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/time_table_text"
                android:textSize="8sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ti_ta_text"
                android:textColor="@color/black"
                android:text="Time-Table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/time_table_text"
                android:layout_marginTop="10sp"
                android:id="@+id/agreement_text"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="회원가입"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/icon_group"
            android:layout_centerHorizontal="true"
            android:id="@+id/Certification_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="23dp"
                android:id="@+id/know_text"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10sp"
                android:layout_below="@id/know_text"
                android:layout_alignLeft="@id/Certification_edit"
                android:id="@+id/Certification_text"
                android:text="아이디"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginRight="20sp"
                android:layout_below="@+id/Certification_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/Certification_edit"
                android:elevation="5dp"
                android:padding="15sp"
                android:textColorHint="#808080"
                android:hint="영어, 숫자만을 섞어 6~16자"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_text_background"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />


            <Button
                android:padding="15sp"
                android:layout_marginTop="12sp"
                android:layout_below="@id/Certification_text"
                android:layout_toRightOf="@id/Certification_edit"
                android:id="@+id/ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="#FFFBEB"
                android:text="확인"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_alignRight="@id/Certification_init"
            android:layout_alignLeft="@id/Certification_init"
            android:layout_below="@id/Certification_init"
            android:id="@+id/password_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginLeft="23dp"
                android:id="@+id/know_text_2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10sp"
                android:layout_below="@+id/know_text_2"
                android:layout_alignLeft="@id/password_edit"
                android:id="@+id/password_text"
                android:text="*비밀번호"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginBottom="10sp"
                android:privateImeOptions="defaultInputm40ode=korean"
                android:layout_below="@+id/password_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/password_edit"
                android:elevation="5dp"
                android:padding="15sp"
                android:textColorHint="#808080"
                android:hint="영어, 숫자, 특수문자만을 섞어 6~16자"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_alignRight="@id/Certification_init"
            android:layout_alignLeft="@id/Certification_init"
            android:layout_below="@id/password_init"
            android:id="@+id/password_ok_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginLeft="23dp"
                android:id="@+id/password_ok_text"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10sp"
                android:layout_below="@+id/password_ok_text"
                android:layout_alignLeft="@id/password_ok_edit"
                android:id="@+id/password_text_2"
                android:text="*비밀번호 확인"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginBottom="10sp"
                android:privateImeOptions="defaultInputm40ode=korean"
                android:layout_below="@+id/password_text_2"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/password_ok_edit"
                android:elevation="5dp"
                android:padding="15sp"
                android:textColorHint="#808080"
                android:hint="비밀번호 확인"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/password_ok_init"
            android:layout_centerHorizontal="true"
            android:id="@+id/nickname_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="23dp"
                android:id="@+id/nickname_text"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/nickname_text"
                android:layout_alignLeft="@id/nickname_edit"
                android:id="@+id/nickname_text_2"
                android:text="닉네임"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginRight="20sp"
                android:layout_below="@+id/nickname_text_2"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/nickname_edit"
                android:elevation="5dp"
                android:padding="15sp"
                android:textColorHint="#808080"
                android:hint="닉네임"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_text_background"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />


            <Button
                android:padding="15sp"
                android:layout_marginTop="40sp"
                android:layout_below="@id/nickname_text"
                android:layout_toRightOf="@id/nickname_edit"
                android:id="@+id/ok_btn_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="#FFFBEB"
                android:text="확인"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickname_init"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:paddingLeft="40sp"
            android:paddingRight="40sp"
            android:text="가입"
            android:onClick="@{fragment::onclcik}"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>