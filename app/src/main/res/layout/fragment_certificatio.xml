<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.signup.SignUpCertificatioFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/singin_background"
        tools:context=".ui.fragment.signup.SignUpCertificatioFragment">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="118sp"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:text="@string/inside_community"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/inform_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="61sp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:text="먼저 계정이 필요해요!"
            android:textColor="#A6A6A6"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/certification_Number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_btn"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="15sp"
            android:text="*인증번호확인"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inform_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="15sp"
            android:text="*이메일"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_below="@+id/email_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="10sp"
            android:layout_marginRight="80dp"
            android:background="@drawable/edit_text_background"
            android:elevation="10dp"
            android:hint="이메일"
            android:padding="12sp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="15sp" />


        <Button
            android:id="@+id/email_btn"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_below="@id/email_edit"
            android:layout_alignLeft="@id/inform_text"
            android:layout_alignRight="@id/email_edit"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:minHeight="0sp"
            android:padding="12sp"
            android:text="인증번호 보내기"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/certification_Number_edit"
            android:layout_width="180sp"
            android:layout_height="45sp"
            android:layout_below="@id/certification_Number_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="10sp"
            android:background="@drawable/edit_text_background"
            android:elevation="10dp"
            android:hint="인증번호"
            android:padding="15sp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="12sp" />


        <Button
            android:id="@+id/certification_Number_button"
            android:layout_width="70sp"
            android:layout_height="45sp"
            android:layout_below="@id/certification_Number_text"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/certification_Number_edit"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:text="검색"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/certification_Number_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:elevation="5dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:onClick="@{fragment::onclcik}"
            android:text="계속하기"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>