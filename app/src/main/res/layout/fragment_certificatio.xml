<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.signup.SignUpCertificatioFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/singin_background"
        tools:context=".ui.fragment.signup.SignUpCertificatioFragment">

                <TextView
                    android:layout_marginLeft="63sp"
                    android:fontFamily="@font/spoqahansansneo_bold"
                    android:textSize="22sp"
                    android:id="@+id/welcome_text"
                    android:layout_marginTop="118sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inside_community" />

                <TextView
                    android:id="@+id/inform_text"
                    android:layout_marginTop="61sp"
                    android:layout_alignLeft="@id/welcome_text"
                    android:textSize="16sp"
                    android:layout_below="@id/welcome_text"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textColor="#A6A6A6"
                    android:text="먼저 계정이 필요해요!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/email_btn"
                    android:id="@+id/certification_Number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/inform_text"
                    android:layout_marginTop="15sp"
                    android:text="*인증번호확인"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_below="@id/inform_text"
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/inform_text"
                    android:layout_marginTop="15sp"
                    android:text="*이메일"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_alignLeft="@id/inform_text"
                    android:id="@+id/email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_text"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/edit_text_background"
                    android:elevation="10dp"
                    android:hint="이메일"
                    android:padding="12sp"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:textSize="15sp" />


                <Button
                    android:padding="12sp"
                    android:minHeight="0sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:layout_alignRight="@id/email_edit"
                    android:layout_alignLeft="@id/inform_text"
                    android:id="@+id/email_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_edit"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="#FFFBEB"
                    android:text="인증번호 보내기"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:layout_alignLeft="@id/inform_text"
                    android:id="@+id/certification_Number_edit"
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/certification_Number_text"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edit_text_background"
                    android:elevation="10dp"
                    android:hint="인증번호"
                    android:padding="15sp"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:textSize="12sp" />


                <Button
                    android:fontFamily="@font/spoqahansansneo_bold"
                    android:minHeight="0sp"
                    android:minWidth="0sp"
                    android:id="@+id/certification_Number_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/certification_Number_text"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@id/certification_Number_edit"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="#FFFBEB"
                    android:paddingTop="12sp"
                    android:paddingBottom="12sp"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp"
                    android:layout_marginLeft="10sp"
                    android:text="확인"
                    android:textColor="@color/black"
                    />

                <Button
                    android:textSize="20sp"
                    android:fontFamily="@font/spoqahansansneo_bold"
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/certification_Number_edit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="#FFFBEB"
                    android:paddingLeft="40sp"
                    android:paddingRight="40sp"
                    android:text="계속하기"
                    android:onClick="@{fragment::onclcik}"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


    </RelativeLayout>
</layout>