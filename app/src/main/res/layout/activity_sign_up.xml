<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/icon_group"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logoImage"
                    android:scaleType="centerCrop"
                    android:padding="2.5sp"
                    android:background="@drawable/logostroke"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo"
                    android:layout_width="80sp"
                    android:layout_height="80sp"/>

                <TextView
                    android:textSize="20sp"
                    android:id="@+id/ti_ta_text"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/logoImage"
                    android:textColor="@color/black"
                    android:text="Ti-Ta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/time_table_text"
                    android:textSize="8sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ti_ta_text"
                    android:textColor="@color/black"
                    android:text="Time-Table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="10sp"
                android:id="@+id/agreement_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/icon_group"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="약관동의"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:layout_marginTop="10sp"
                android:id="@+id/checkbox_All_Agree"
                android:textSize="12sp"
                android:layout_alignLeft="@id/terms_of_service"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/agreement_text"
                android:buttonTint="#808080"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="아래 약관에 모두 동의합니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/checkbox_Agree_1"
                android:textSize="12sp"
                android:layout_alignLeft="@id/terms_of_service"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/checkbox_All_Agree"
                android:buttonTint="#808080"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="서비스 이용약관 동의(필수)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ScrollView
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/terms_of_service"
                android:elevation="20dp"
                android:padding="20sp"
                android:layout_marginRight="70sp"
                android:layout_marginLeft="70sp"
                android:background="@drawable/edit_text_background"
                android:layout_below="@id/checkbox_Agree_1"
                android:layout_width="match_parent"
                android:layout_height="100sp">

                <TextView
                    android:id="@+id/terms_of_service_Text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="@string/Zunmun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ScrollView>

            <CheckBox
                android:layout_marginTop="10sp"
                android:id="@+id/checkbox_Agree_2"
                android:textSize="12sp"
                android:layout_alignLeft="@id/terms_of_service"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/terms_of_service"
                android:buttonTint="#808080"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="개인정보처리방침 동의(필수)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ScrollView
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/privacy_Terms"
                android:elevation="20dp"
                android:padding="20sp"
                android:layout_marginRight="70sp"
                android:layout_marginLeft="70sp"
                android:background="@drawable/edit_text_background"
                android:layout_below="@id/checkbox_Agree_2"
                android:layout_width="match_parent"
                android:layout_height="100sp">
                <TextView
                    android:id="@+id/Privacy_Terms_text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="@string/Zunmun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ScrollView>
            <CheckBox
                android:layout_marginTop="10sp"
                android:id="@+id/checkbox_Agree_3"
                android:textSize="12sp"
                android:layout_alignLeft="@id/terms_of_service"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/privacy_Terms"
                android:buttonTint="#808080"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="커뮤니이용규칙 확인(필수)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ScrollView
                android:id="@+id/community_usage_rules"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_below="@id/checkbox_Agree_3"
                android:layout_marginLeft="70sp"
                android:layout_marginRight="70sp"
                android:background="@drawable/edit_text_background"
                android:elevation="20dp"
                android:padding="20sp"
                android:textColor="@color/black"
                android:textSize="15sp">

                <TextView
                    android:id="@+id/community_usage_rules_text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="@string/Zunmun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ScrollView>

            <Button
                android:layout_marginBottom="5sp"
                android:id="@+id/next_button"
                android:paddingRight="40sp"
                android:paddingLeft="40sp"
                android:backgroundTint="#FFFBEB"
                android:textStyle="bold"
                android:text="다음"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:layout_below="@id/community_usage_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>
