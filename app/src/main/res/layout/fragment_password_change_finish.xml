<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.signup.PasswordChangeFinishFragment" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/icon_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/logostroke"
                    android:padding="2.5sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/ti_ta_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logoImage"
                    android:layout_centerHorizontal="true"
                    android:text="Ti-Ta"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_table_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ti_ta_text"
                    android:layout_centerHorizontal="true"
                    android:text="Time-Table"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/agreement_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_table_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:text="비밀번호 변경"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Certification_init"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_init"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/know_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Certification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/know_text"
                    android:layout_alignLeft="@id/Certification_edit"
                    android:layout_marginTop="10sp"
                    android:text="*새 비밀번호 확인"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Certification_edit"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Certification_text"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/edit_text_background"
                    android:elevation="5dp"
                    android:hint="새 비밀번호를 재입력해주세요"
                    android:padding="15sp"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:textSize="15sp" />


                <Button
                    android:id="@+id/ok_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Certification_text"
                    android:layout_marginTop="12sp"
                    android:layout_toRightOf="@id/Certification_edit"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="#FFFBEB"
                    android:padding="15sp"
                    android:text="확인"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password_init"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_group"
                android:layout_alignLeft="@id/Certification_init"
                android:layout_alignRight="@id/Certification_init">


                <TextView
                    android:id="@+id/know_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/know_text_2"
                    android:layout_alignLeft="@id/password_edit"
                    android:layout_marginTop="10sp"
                    android:text="*새 비밀번호"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password_text"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edit_text_background"
                    android:elevation="5dp"
                    android:hint="새로운 비밀번호를 입력해주세요"
                    android:padding="15sp"
                    android:privateImeOptions="defaultInputm40ode=korean"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:textSize="15sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Certification_init"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="#FFFBEB"
                android:paddingLeft="40sp"
                android:paddingRight="40sp"
                android:text="변경"
                android:onClick="@{fragment::onclcik}"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </RelativeLayout>

        </RelativeLayout>

</layout>