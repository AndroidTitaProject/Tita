<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/icon_group"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logoImage"
                    android:scaleType="centerCrop"
                    android:padding="2.5sp"
                    android:background="@drawable/logostroke"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo"
                    android:layout_width="80sp"
                    android:layout_height="80sp"/>

                <TextView
                    android:textSize="20sp"
                    android:id="@+id/Ti_ta"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/logoImage"
                    android:textColor="@color/black"
                    android:text="Ti-Ta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/Time_table"
                    android:textSize="8sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/Ti_ta"
                    android:textColor="@color/black"
                    android:text="Time-Table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <EditText
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/idedit"
                android:elevation="20dp"
                android:padding="20sp"
                android:textColorHint="#808080"
                android:hint="아이디"
                android:layout_marginRight="70sp"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="30sp"
                android:background="@drawable/edit_text_background"
                android:layout_below="@id/icon_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="15sp"
                android:id="@+id/passwordedit"
                android:elevation="20dp"
                android:padding="20sp"
                android:hint="비밀번호"
                android:layout_marginRight="70sp"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="30sp"
                android:background="@drawable/edit_text_background"
                android:layout_below="@id/idedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/login_button"
                android:paddingRight="40sp"
                android:paddingLeft="40sp"
                android:backgroundTint="#FFFBEB"
                android:textStyle="bold"
                android:text="로그인"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40sp"
                android:layout_below="@id/passwordedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Sign_Up"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_below="@id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Member_Questions"/>

            <TextView
                android:id="@+id/find_id_pw"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_below="@id/Sign_Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_id_pw"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>
