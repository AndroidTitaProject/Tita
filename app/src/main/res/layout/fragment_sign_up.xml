<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.SignUptermsFragment" />
        <variable
            name="viewmodel"
            type="com.example.tita.viewmodels.SignUpViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/sign_up_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/icon_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/logostroke"
                    android:padding="2.5sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/ti_ta_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logoImage"
                    android:layout_centerHorizontal="true"
                    android:text="Ti-Ta"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_table_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ti_ta_text"
                    android:layout_centerHorizontal="true"
                    android:text="Time-Table"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/agreement_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_group"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="약관동의"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkbox_All_Agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agreement_text"
                android:layout_alignLeft="@id/terms_of_service"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:buttonTint="#808080"
                android:text="아래 약관에 모두 동의합니다."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkbox_Agree_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkbox_All_Agree"
                android:layout_alignLeft="@id/terms_of_service"
                android:layout_centerHorizontal="true"
                android:buttonTint="#808080"
                android:text="서비스 이용약관 동의(필수)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/terms_of_service"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_below="@id/checkbox_Agree_1"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="70sp"
                android:background="@drawable/edit_text_background"
                android:elevation="20dp"
                android:padding="20sp"
                android:textColor="@color/black"
                android:textSize="15sp">

                <TextView
                    android:id="@+id/terms_of_service_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Zunmun"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </ScrollView>

            <CheckBox
                android:id="@+id/checkbox_Agree_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/terms_of_service"
                android:layout_alignLeft="@id/terms_of_service"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:buttonTint="#808080"
                android:text="개인정보처리방침 동의(필수)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/privacy_Terms"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_below="@id/checkbox_Agree_2"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="70sp"
                android:background="@drawable/edit_text_background"
                android:elevation="20dp"
                android:padding="20sp"
                android:textColor="@color/black"
                android:textSize="15sp">

                <TextView
                    android:id="@+id/Privacy_Terms_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Zunmun"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </ScrollView>

            <CheckBox
                android:id="@+id/checkbox_Agree_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/privacy_Terms"
                android:layout_alignLeft="@id/terms_of_service"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:buttonTint="#808080"
                android:text="커뮤니이용규칙 확인(필수)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/community_usage_rules"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_below="@id/checkbox_Agree_3"
                android:layout_marginLeft="70sp"
                android:layout_marginRight="70sp"
                android:background="@drawable/edit_text_background"
                android:elevation="20dp"
                android:padding="20sp"
                android:textColor="@color/black"
                android:textSize="15sp">

                <TextView
                    android:id="@+id/community_usage_rules_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Zunmun"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </ScrollView>

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/community_usage_rules"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="#FFFBEB"
                android:paddingLeft="40sp"
                android:paddingRight="40sp"
                android:text="다음"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>
