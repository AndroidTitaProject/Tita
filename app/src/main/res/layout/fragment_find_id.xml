<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.find.id.FindIdFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgrouind_img"
        android:orientation="vertical"
        tools:context=".IdPasswordFind.FindIdActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="267dp"
                android:layout_height="60dp"
                android:layout_marginStart="46dp"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="47dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:layout_width="266dp"
                    android:layout_height="match_parent"

                    android:text="아이디를 까먹었나요?\n걱정하지 말고 같이 찾아봐요!"
                    android:textColor="@color/black"
                    android:textSize="21.666dp"

                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="47dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <TextView
                    android:id="@+id/Certification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="22dp"
                    android:text="*이메일"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextGreyStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Certification_edit"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        app:hintTextAppearance="@style/EditTextGreyStyle"
                        android:layout_marginTop="3dp"
                        app:errorEnabled="true"
                        android:background="@drawable/edit_text_background"
                        android:elevation="5dp"
                        android:hint="이메일"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/ok_btn"
                    android:layout_width="266dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="#FFFBEB"
                    android:gravity="center"
                    android:text="인증번호 보내기"

                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/Certification_init"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


                <TextView
                    android:layout_width="102dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="20.83dp"
                    android:text="*인증번호 확인"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditTextGreyStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:theme="@style/EditTextGreyStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/check_edit"
                            android:layout_width="193dp"
                            app:hintEnabled="false"
                            android:layout_height="38sp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/edit_text_background"
                            android:hint="인증번호"
                            android:translationY="3dp"
                            android:elevation="5dp"
                            android:paddingLeft="15dp"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:id="@+id/check_btn"
                        android:layout_width="67dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="5dp"

                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFBEB"
                        android:text="확인"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_init"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Certification_init">


                <TextView
                    android:id="@+id/password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10sp"
                    android:text="*닉네임"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditTextGreyStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="닉네임"

                        android:theme="@style/EditTextGreyStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="193dp"
                            android:layout_height="38sp"
                            android:layout_marginTop="3dp"

                            android:background="@drawable/edit_text_background"
                            android:paddingLeft="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="#808080"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:layout_width="67dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="5dp"

                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFBEB"
                        android:text="확인"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/next_button"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="62dp"
                    android:layout_marginBottom="5sp"

                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="#FFFBEB"
                    android:minWidth="0sp"
                    android:minHeight="0sp"
                    android:onClick="@{fragment::onclcik}"
                    android:text="ID 찾기"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>