<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.signup.FindIdFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:orientation="vertical"
        tools:context=".IdPasswordFind.FindIdActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="74dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/logostroke"
                    android:padding="2.5sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/ti_ta_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logoImage"
                    android:layout_centerHorizontal="true"
                    android:text="Ti-Ta"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_table_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ti_ta_text"
                    android:layout_centerHorizontal="true"
                    android:text="Time-Table"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/agreement_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_table_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:text="ID찾기"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <TextView
                    android:id="@+id/Certification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10sp"
                    android:text="이메일"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    style="@style/EditTextGreyStyle"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextGreyStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Certification_edit"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Certification_text"
                        android:layout_gravity="center"

                        android:background="@drawable/edit_text_background"
                        android:elevation="5dp"
                        android:hint="이메일"
                        android:padding="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="#808080"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/ok_btn"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="#FFFBEB"
                    android:gravity="center"
                    android:padding="15sp"
                    android:text="확인"

                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/Certification_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/know_text"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10sp"
                    android:text="*인증번호 확인"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditTextGreyStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/EditTextGreyStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="90sp"
                            android:background="@drawable/edit_text_background"
                            android:elevation="5dp"
                            android:hint="인증번호"
                            android:padding="15sp"
                            android:textColor="@color/black"
                            android:textColorHint="#808080"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFBEB"

                        android:padding="15sp"
                        android:text="확인"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_init"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/Certification_init">


                <TextView
                    android:id="@+id/password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="90sp"
                    android:layout_marginTop="10sp"
                    android:text="*닉네임"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/password_edit"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edit_text_background"
                    android:elevation="5dp"
                    android:hint="닉네임"
                    android:layout_marginTop="5sp"
                    android:padding="15sp"
                    android:privateImeOptions="defaultInputm40ode=korean"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_init"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="#FFFBEB"
                    android:onClick="@{fragment::onclcik}"
                    android:paddingLeft="40sp"
                    android:paddingRight="40sp"
                    android:text="찾기"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>