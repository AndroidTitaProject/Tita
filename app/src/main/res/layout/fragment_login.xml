<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.signup.LoginFragment" />

        <variable
            name="login"
            type="com.example.tita.viewmodels.LoginViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        app:layoutDescription="@xml/fragment_login_scene">

        <LinearLayout
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginTop="141dp"
                android:background="@drawable/logostroke"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/ti_ta_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/ti_ta"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_table_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Time-Table"
                android:textColor="@color/black"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/d"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="16dp">

            <EditText
                android:id="@+id/id_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="70sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="70sp"
                android:background="@drawable/edit_text_background"
                android:elevation="20dp"
                android:hint="아이디"
                android:padding="20sp"

                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/forget_id_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="10dp"
                android:text="아이디를 잊으셧나요?"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="70sp"
                android:background="@drawable/edit_text_background"
                android:elevation="20dp"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:padding="20sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/find_id_pwd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="20dp"
                android:onClick="@{fragment::onClick}"
                android:text="비밀번호가 기억이 안나시나요?"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40sp"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="#FFFBEB"
                android:onClick="@{fragment::onClick}"
                android:paddingLeft="40sp"
                android:paddingRight="40sp"
                android:text="로그인"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:id="@+id/sign_Up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{fragment::onClick}"
            android:text="@string/Member_Questions"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/t"
            tools:layout_editor_absoluteX="132dp" />
    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>