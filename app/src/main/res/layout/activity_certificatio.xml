<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SignUpCertificatioActivity">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/icon_group"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logoImage"
                android:scaleType="centerCrop"
                android:padding="2.5sp"
                android:background="@drawable/logostroke"
                android:src="@drawable/logo"
                android:layout_width="80sp"
                android:layout_height="80sp"/>

            <TextView
                android:textSize="20sp"
                android:id="@+id/Ti_ta"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/logoImage"
                android:textColor="@color/black"
                android:text="Ti-Ta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Time_table"
                android:textSize="8sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Ti_ta"
                android:textColor="@color/black"
                android:text="Time-Table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/icon_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10sp"
                android:id="@+id/Agreement"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="회원가입"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignLeft="@id/idedit"
                android:layout_below="@+id/Agreement"
                android:id="@+id/school_text"
                android:text="*학교"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_below="@+id/school_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/idedit"
                android:elevation="20dp"
                android:padding="20sp"
                android:textColorHint="#808080"
                android:hint="학교를 입력해주세요"
                android:layout_marginRight="70sp"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


                <Button
                android:layout_toRightOf="@id/idedit"
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="#FFFBEB"
                android:text="로그인"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>