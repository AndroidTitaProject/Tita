<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.signup.SignUpCertificatioSchoolFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/singin_background">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160sp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="@string/school"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/school_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="76sp"
            android:text="*학교"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/school_edit"
            android:layout_width="220sp"
            android:layout_height="45sp"
            android:layout_below="@id/school_text"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="10sp"
            android:background="@drawable/edit_text_background"
            android:elevation="10dp"
            android:hint=""
            android:padding="13sp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="14sp" />

        <Button
            android:id="@+id/school_button"
            android:layout_width="70sp"
            android:layout_height="45sp"
            android:layout_below="@id/school_text"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/school_edit"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="검색"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/school_certificatio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/school_edit"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="25sp"
            android:text="*학교인증"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/school_certificatio_edit"
            android:layout_width="220sp"
            android:layout_height="45sp"
            android:layout_below="@id/school_certificatio_text"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="10sp"
            android:background="@drawable/edit_text_background"
            android:elevation="10dp"
            android:hint="학생증 사진을 첨부해주세요"
            android:padding="13sp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="14sp" />

        <Button
            android:id="@+id/school_certificatio_button"
            android:layout_width="70sp"
            android:layout_height="45sp"
            android:layout_below="@id/school_certificatio_text"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/school_certificatio_edit"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="첨부"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="40dp"
            android:id="@+id/next_btn"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:onClick="@{fragment::onclcik}"
            android:text="게속하기"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>
</layout>