<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="fragment"
            type="com.example.tita.ui.fragment.signup.FragmentIdKnowFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/icon_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="103dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logostroke"
                android:padding="2.5sp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/ti_ta_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoImage"
                android:layout_centerHorizontal="true"
                android:text="Ti-Ta"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_table_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ti_ta_text"
                android:layout_centerHorizontal="true"
                android:text="Time-Table"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/agreement_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_table_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="ID찾기"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/let_know_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="OOO님의 아이디는"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/let_know_id"
                android:layout_centerHorizontal="true"
                android:text="timetable2030입니다."
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="#FFFBEB"
                android:onClick="@{fragment::onclcik}"
                android:text="로그인하러가기"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>
</layout>