<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/singin_background"
        tools:context=".ui.fragment.signup.SignUpCertificatioFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/back_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:layout_marginEnd="20dp"
                android:background="@drawable/back" />

        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="118sp"
            android:fontFamily="@font/notosanskrbold"
            android:includeFontPadding="false"
            android:text="@string/inside_community"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/inform_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="50sp"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:text="먼저 계정이 필요해요!"
            android:textColor="#A6A6A6"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/certification_Number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_success_email_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="15sp"
            android:text="*인증번호확인"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inform_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="15sp"
            android:text="이메일"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_below="@+id/email_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_alignRight="@id/welcome_text"
            android:layout_marginTop="10sp"
            android:background="@color/white"
            android:elevation="5dp"
            android:hint=""
            android:padding="12sp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="15sp" />


        <Button
            android:id="@+id/email_btn"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_below="@id/email_edit"
            android:layout_alignLeft="@id/inform_text"
            android:layout_alignRight="@id/email_edit"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#FFFBEB"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:minHeight="0sp"
            android:padding="12sp"
            android:text="인증번호 보내기"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/error_success_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_btn"
            android:layout_alignLeft="@id/welcome_text"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:text="success or fail"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/certification_Number_edit"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_below="@id/certification_Number_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:hint="인증번호"
            android:padding="13dp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/error_success_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/certification_Number_edit"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:text="success or fail"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone" />


        <Button
            android:id="@+id/certification_Number_button"
            android:layout_width="70sp"
            android:layout_height="45sp"
            android:layout_below="@id/certification_Number_text"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/certification_Number_edit"
            android:backgroundTint="#FFFBEB"
            android:fontFamily="@font/notosanskrbold"
            android:includeFontPadding="false"
            android:text="확인"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#FFFBEB"
            android:elevation="5dp"
            android:fontFamily="@font/notosanskrbold"
            android:includeFontPadding="false"
            android:text="계속하기"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>