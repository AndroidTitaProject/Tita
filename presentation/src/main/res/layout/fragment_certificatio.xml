<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/singin_background"
        tools:context=".ui.fragment.signup.SignUpCertificatioFragment">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanskrbold"
            android:text="@string/inside_community"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/inform_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/notosanskrbold"
            android:text="먼저 계정이 필요해요!"
            android:textColor="#A6A6A6"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/certification_Number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_success_email_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="15dp"
            android:text="*인증번호확인"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inform_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="15sp"
            android:text="*이메일"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_below="@+id/email_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_alignRight="@id/welcome_text"
            android:layout_marginTop="10sp"
            android:background="@color/white"
            android:elevation="5dp"
            android:hint="이메일"
            android:padding="12sp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="15sp" />


        <Button
            android:id="@+id/email_btn"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_below="@id/email_edit"
            android:layout_alignLeft="@id/inform_text"
            android:layout_alignRight="@id/email_edit"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanskrbold"
            android:minHeight="0sp"
            android:padding="12sp"
            android:text="인증번호 보내기"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/error_success_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_btn"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanskrbold"
            android:textColor="@color/white"
            android:layout_alignLeft="@id/welcome_text"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:text="success or fail"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone" />

        <EditText
            android:background="@drawable/edit_text_background"
            android:id="@+id/certification_Number_edit"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_below="@id/certification_Number_text"
            android:layout_alignLeft="@id/inform_text"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:hint="인증번호"
            android:padding="13dp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/error_success_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/certification_Number_edit"
            android:textSize="15dp"
            android:fontFamily="@font/notosanskrbold"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:layout_alignLeft="@id/welcome_text"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:text="success or fail"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone" />


        <Button
            android:id="@+id/certification_Number_button"
            android:layout_width="70sp"
            android:layout_height="45sp"
            android:layout_below="@id/certification_Number_text"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/certification_Number_edit"
            android:backgroundTint="#FFFBEB"
            android:fontFamily="@font/notosanskrbold"
            android:text="확인"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FFFBEB"
            android:elevation="5dp"
            android:fontFamily="@font/notosanskrbold"
            android:includeFontPadding="false"
            android:text="계속하기"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>